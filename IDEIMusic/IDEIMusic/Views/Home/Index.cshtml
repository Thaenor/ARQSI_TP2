                    <li>
                        Ver Lojas Registadas
                    </li>
                    <li>
                        Apagar Lojas Registadas
                    </li>
                    <li>
                        Registar Lojas
                    </li>
                </ul>
            </li>
            
            <li>
                Ver Vendas
            </li>
        }
        <li>
            Ver Catalogo de Albums
        </li>
        @if (Session["Role"] == "Manager")
        {
            <li>
                Gerir Albums
                <ul>
                    <li>
                        Ver Albums
                    </li>
                    <li>
                        Registar Albums
                    </li>
                    <li>
                        Apagar Albums
                    </li>
                </ul>
            </li>
            
        }
    </ul>
    }


