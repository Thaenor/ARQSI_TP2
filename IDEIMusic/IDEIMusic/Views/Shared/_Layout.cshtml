<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IDEIMusic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img height="50" title="IDEIMusic Logo" alt="IDEIMusic Logo" src="http://findicons.com/files/icons/1634/aqua_neue_graphite/128/music.png">
                @Html.ActionLink("IDEIMusic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["ID"] != null)
                    {
                        <li>@Html.ActionLink("Catalogo", "Index", "Albums")</li>
                    }
                    @if (Session["ID"] != null)
                    {
                        <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Session["ID"] != null)
                    {
                        if (Session["Role"].ToString() == "Administrator" || Session["Role"].ToString() == "Manager")
                        {
                            <li>
                                @Html.ActionLink("Manage Stores", "Index", "Stores")
                            </li>
                        }
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IDEIMusic</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
